@model List<Homework__01.Models.MyData>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MyData</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="Category">類別</label>
            @*@Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })*@
          @foreach (var i in Model)
          {
            <div class="col-md-10">
                @Html.EditorFor(model => i.Category, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => i.Category, "", new { @class = "text-danger" })
            </div>
              break;
          }
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Category">日期</label>
            @*@Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @foreach (var i in Model)
            {
            <div class="col-md-10">
                @Html.EditorFor(model => i.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => i.Date, "", new { @class = "text-danger" })
            </div>
                break;
            }
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Category">金額</label>
            @*@Html.LabelFor(model => model.Money, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @foreach (var i in Model)
            {
            <div class="col-md-10">
                @Html.EditorFor(model => i.Money, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => i.Money, "", new { @class = "text-danger" })
            </div>
                break;
            }

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>#</th>
                    <th>類別</th>
                    <th>日期</th>
                    <th>金額</th>
                </tr>
               @foreach (var i in Model)
               {
                <tr>
                    <td>@i.Number</td>
                    <td>@i.Category</td>
                    <td>@i.Date</td>
                    <td>@i.Money</td>
                </tr>
                   
               }

                
            </table>
        </div>
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
